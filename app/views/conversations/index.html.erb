<% provide(:title, 'Messages') %>
<div class = "row">
  <%= render 'users/user_sidebar' %>
  <div class="col-md-9">
    <h1>Messages</h1>
    <div class="row">
      <div class="col-md-3 col-md-offset-11">
        <%= link_to 'Create room', '#myModal', class: 'btn btn-success modal_link', "data-toggle": 'modal' %>
      </div>
      <%= render 'create_room_modal' %>
    </div>
    <div class = "row">
      <ul class="conversations">
        <%= render @conversations %>
      </ul>
    </div>
  </div>
</div>