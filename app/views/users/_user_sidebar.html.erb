<div class="col-md-2">
  <div class="navbar navbar-default navbar-fixed-left">
    <% if current_user %>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
        <li><%= link_to 'Friends',  friends_user_path(current_user) %></li>
        <% if unread_message_count > 0 %>
          <li><%= link_to "Messages + #{ unread_message_count }", conversations_path %></li>
        <% else %>
          <li><%= link_to 'Messages', conversations_path %></li>
        <% end %>
      </ul>
    <% else %>
      <%= link_to 'Sign in now', signin_path %>
    <% end %>
  </div>
</div>