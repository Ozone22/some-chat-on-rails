<% provide(:title, 'Friends') %>
<div class = "row">
  <%= render 'user_sidebar' %>
  <div class="col-md-9">
    <h1>Friends</h1>
    <div class = "row">
      <div class="friend_type_panel">
        <div class="col-md-3">
          <%= link_to 'Accepted Friends',
                      friends_user_path(status: 'accepted') %>
        </div>
        <div class="col-md-3">
          <%= link_to 'Pending acceptance',
                      friends_user_path(status: 'pending') %>
        </div>
        <div class="col-md-3">
          <%= link_to 'Requested friendship',
                      friends_user_path(status: 'requested') %>
        </div>
      </div>
    </div>
    <ul class="users">
      <%= render @users %>
    </ul>
  </div>
</div>